<div class="message">
  <div class="message_up">
    <div class="message_name">
    <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>
    </div>
    <div class="message-_ate">
    <!-- 投稿した時刻を出力する -->
      <%= message.created_at %>
    </div>
  </div>
  <div class="message_down">
  <!-- 投稿したメッセージ内容を記述する -->
    <%= message.content %>
  </div>
</div>