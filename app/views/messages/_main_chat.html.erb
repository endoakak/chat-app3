<div class="main_header">
  <div class="room_name">
    hogefuga
  </div>
  <div class="close_room">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<div class="messages">
  <div class="message">
    <%= render partial: "message", collection: @messages %>
  </div>
</div>
<%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f| %>
  <div class="form_left">
    <%= f.text_field :content, class: "input_text", placeholder: "type a message" %>
    <label class="input_image">
      <span class="image_file">画像</span>
      <%= f.file_field :image, class: "hidden" %>
    </label>
  </div>
  <%= f.submit "送信", class: "form_btn"%>
<% end %>