<div class="side_header">
  <div class="side_header_left">
    <%= link_to "#{current_user.name}", edit_user_path(current_user.id) %>
  </div>
  <div class="side_header_right">
    <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>
<div class="rooms">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <%= link_to room.name, room_messages_path(room) %>
    </div>
  <% end %>
</div>